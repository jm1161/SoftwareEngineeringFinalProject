<!DOCTYPE html>
<html>
<head>
	
</head>
<body>

	<h1>Hello welcome back - <%= current_user.email %></h1>
	<br><br>

	


<%if @wants.count != 0 %>
 
<center><h2>Books you want to buy</h2></center>
<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Book ID#</th>
      <th scope="col">Book</th>
      <th scope="col">Author</th>
      <th scope="col">ASIN</th>
    </tr>
  </thead>
  <% @wants.each do |w| %>
  <tbody>
	 <tr>
      <th scope="row"><%=w.book.id%></th>
      <td><%= w.book.name %></td>
      <td><%= w.book.brand %></td>
      <td><%= w.book.asin %></td>
    </tr>
  </tbody>
  <%end%>
</table>


	<%else%>
		<center><p>Currently you are not buying any books</p></center>

<%end%>







	
	<center><a href="/search" type="submit" value="Search to buy" class="btn btn-outline-primary">Search to buy</a></center><br>



	
	<%if @haves.count != 0 %>

<center><h2>Books you want to sell</h2></center>
	<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Book ID#</th>
      <th scope="col">Book</th>
      <th scope="col">Author</th>
      <th scope="col">ASIN</th>
    </tr>
  </thead>
  <% @haves.each do |h| %>
  <tbody>
	 <tr>
      <th scope="row"><%=h.book.id%></th>
      <td><%= h.book.name %></td>
      <td><%= h.book.brand %></td>
      <td><%= h.book.asin %></td>
    </tr>
  </tbody>
  <%end%>
</table>


	<%else%>
		<center><p>Currently you are not selling any books</p></center>

<%end%>


	<center><a href="/search" value="Search to sell" type="submit" class="btn btn-outline-primary">Search to sell!</a></center>
	<br><br>


</body>
</html>